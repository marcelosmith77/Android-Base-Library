<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="5dp"
        >

        <ImageView
            android:id="@+id/minusButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/outline_remove_circle_outline_black_18dp"
            android:tint="@color/colorPrimary"
            android:layout_marginRight="12dp"
            android:focusable="true"
            android:clickable="true" />

        <EditText
            android:id="@+id/valueTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:enabled="false"
            android:text=""
            android:textColor="#000000"
            android:textSize="@dimen/valueSelector_text" />

        <TextView
            android:id="@+id/valueLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="%"
            android:textSize="@dimen/valueSelector_label_text" />


        <ImageView
            android:id="@+id/plusButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/outline_add_circle_outline_black_18dp"
            android:tint="@color/colorPrimary"
            android:layout_marginLeft="12dp"
            android:focusable="true"
            android:clickable="true" />
    </LinearLayout>

</merge>
